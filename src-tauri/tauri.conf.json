{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "Текст тут рядом",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "scope": ["$APPDATA/**/*"],
        "readFile": true,
        "readDir": true,
        "writeFile": true,
        "exists": true,
        "createDir": true
      }
    },
    "windows": [
      {
        "title": "Текст тут рядом",
        "width": 800,
        "height": 600,
        "visible": false,
        "label": "main"
      },
      {
        "width": 480,
        "height": 200,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.anton-tut.txt",
      "icon": [
        "icons/32.png",
        "icons/32@2x.png",
        "icons/128.png",
        "icons/128@2x.png"
      ]
    }
  }
}
